{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "Launch Current File",
            "request": "launch",
            "mainClass": "${file}"
        },
        {
            "type": "java",
            "name": "Launch Tomcat Server",
            "request": "launch",
            "mainClass": "org.apache.catalina.startup.Bootstrap",
            "args": [
                "start"
            ],
            "vmArgs": [
                "-Dcatalina.base=${workspaceFolder}/target/tomcat",
                "-Dcatalina.home=${workspaceFolder}/target/tomcat"
            ]
        }
    ]
}